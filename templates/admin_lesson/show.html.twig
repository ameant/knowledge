{% extends 'base.html.twig' %}

{% block title %}Leçon{% endblock %}

{% block body %}
    <h1>Leçon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ lesson.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ lesson.price }} €</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ lesson.content }}</td>
            </tr>
        </tbody>
    </table><br>

     <button class="alert-btn" onclick="window.location.href='{{ path('app_admin_lesson_edit', {'id': lesson.id}) }}'">Modifier</button><br><br>

    {{ include('admin_lesson/_delete_form.html.twig') }}<br>

    <button class="btn" onclick="window.location.href='{{ path('app_admin_lesson_index') }}'">Retour à la liste</button>
{% endblock %}
